<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="6dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp"
    tools:context="com.prangroup.VisitReporter.VisitEntryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personal Information"
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:text="Name:" />

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:text="Staff Id:" />

                <TextView
                    android:id="@+id/txtStaffId"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:text="Mobile No:" />

                <TextView
                    android:id="@+id/txtMobile"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:text="Department:" />

                <TextView
                    android:id="@+id/txtDepartment"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:text="Group:" />

                <TextView
                    android:id="@+id/txtGroup"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:text="Company:" />

                <TextView
                    android:id="@+id/txtCompany"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:text="Visit Information:"
                    android:textSize="24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:text="District:" />

                <Spinner
                    android:id="@+id/spDistrict"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:text="Thana:" />

                <Spinner
                    android:id="@+id/spThana"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:text="Bazar:" />

                <EditText
                    android:id="@+id/etBazar"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:text="Zone:" />

                <Spinner
                    android:id="@+id/spZone"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtProprietorName"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:text="Proprietor Name:" />

                <EditText
                    android:id="@+id/etProprietorName"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtProprietorCode"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:text="Proprietor Code:" />

                <EditText
                    android:id="@+id/etProprietorCode"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtProprietorAddress"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:text="Proprietor Address:" />

                <EditText
                    android:id="@+id/etProprietorAddress"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtProprietorOwnerName"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:text="Proprietor Owner Name:" />

                <EditText
                    android:id="@+id/etProprietorOwnerName"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:text="Proprietor Contact:" />

                <EditText
                    android:id="@+id/etProprietorContact"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivImage1"
                    android:layout_width="122dp"
                    android:layout_height="122dp" />

                <Button
                    android:id="@+id/btnTakeImage"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:text="Take Picture"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDiscussionWith"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:text="Discussion With Proprietor:" />
                <Button
                    android:id="@+id/btnAddPoint"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="add Point" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2.2"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:text="S/L" />
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Discussion Point" />
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Action" />
            </LinearLayout>

            <ListView
                android:id="@+id/lvDiscussion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:text="" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Submit" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
